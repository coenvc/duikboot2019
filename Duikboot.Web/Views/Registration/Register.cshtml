@{
    ViewBag.Title = "Inschrijven";
    Layout = "../Master.cshtml";
}
<section class="site-hero site-hero-innerpage overlay" data-stellar-background-ratio="0.5" style="background-image: url('../../Assets/img/header-bg.jpg')">
    <div class="container">
        <div class="row align-items-center site-hero-inner justify-content-center">
            <div class="col-md-8 text-center">
                <div class="mb-5 element-animate">
                </div>

            </div>
        </div>
    </div>
</section>
<!-- END section -->
<section class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1>Inschrijven!</h1>
                <p>Schrijf je nu in voor een geweldige partycruise langs verschillende prachtige bestemmingen!</p>

            </div>
            <div class="col-lg-6 col-md-12 mb-5 element-animate">

                @using (Html.BeginForm("Submit", "Registration", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label for="FirstName">Name</label>
                            <input type="text" id="FirstName" name="FirstName" class="form-control" required data-validation-required-message="Vul alsjeblieft je voornaam in.">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label for="SurName">Achternaam</label>
                            <input type="text" id="SurName" name="SurName" class="form-control" required data-validation-required-message="Vul alsjeblieft je achternaam in.">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label for="Email">Email</label>
                            <input type="email" id="Email" name="Email" class="form-control" required data-validation-required-message="Vul alsjeblieft je e-mailadres in.">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label for="PhoneNumber">Telefoonnummer</label>
                            <input type="tel" id="PhoneNumber" name="PhoneNumber" class="form-control" required data-validation-required-message="Vul je telefoonnummer in.">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input type="submit" value="Verzenden" id="registerForm__submit" class="btn btn-primary">
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</section>